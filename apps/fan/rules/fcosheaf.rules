sub build_blocks_constant{
	my($hd) = @_;
	my $d = $hd->rank() - 2;
   my $G = $hd->ADJACENCY;
   my $newBlocks = new EdgeMap<Directed, Matrix>($G);
   for (my $e=entire(edges($G)); $e; ++$e) {
      $newBlocks->[$$e] = new Matrix([[1]]);
   }
	return $newBlocks;	
} 
