object PolyhedralComplex {
	
   user_method wcosheaf( $ ){
      my($pc, $p) = @_;
      my $hd = $pc->HASSE_DIAGRAM;
      my $blocks = wcosheaf_from_hd($hd, $p);
      my $sheaf = $pc->add("COSHEAF", BLOCKS=>$blocks);
      return $sheaf;
   }

      
      
   user_method wsheaf( $ ){
      my($pc, $p) = @_;
      my $hd = $pc->HASSE_DIAGRAM;
      my $blocks = wsheaf_from_hd($hd, $p);
      my $cosheaf = $pc->add("SHEAF", BLOCKS=>$blocks);
      return $cosheaf;
   }
   
   
   user_method compact_wsheaf( $ ){
      my($pc, $p) = @_;
      my $hd = $pc->COMPACTIFICATION;
      my $blocks = wsheaf_from_hd($hd, $p);
      my $cosheaf = $pc->add("COMPACT_SHEAF", BLOCKS=>$blocks);
      return $cosheaf;
   }
}

sub wcosheaf_from_hd {
   my($hd, $p) = @_;
   my $G = $hd->ADJACENCY;
   my $newblocks = new EdgeMap<Directed, Matrix>($G);
   my $chosenBases = $hd->CHOSEN_BASES;
   if ($p == 0){
      $newblocks = build_blocks_constant($hd);
   } else{ 
      my $simpleBlocks = $hd->SIMPLE_BLOCKS;
      for (my $e=entire(edges($G)); $e; ++$e) {
         $newblocks->[$$e] = wedge_matrix($simpleBlocks->[$$e], $p);
      }
   }
   return $newblocks;
}

sub wsheaf_from_hd {
   my($hd, $p) = @_;
   my $G = $hd->ADJACENCY;
   my $newblocks = new EdgeMap<Directed, Matrix>($G);
   my $chosenBases = $hd->CHOSEN_BASES;
   if ($p == 0){
      $newblocks = build_blocks_constant($hd);
   } else{ 
      my $simpleBlocks = $hd->SIMPLE_BLOCKS;
      for (my $e=entire(edges($G)); $e; ++$e) {
         $newblocks->[$$e] = new Matrix(transpose(wedge_matrix($simpleBlocks->[$$e], $p)));
      }
   }
   return $newblocks;
}
